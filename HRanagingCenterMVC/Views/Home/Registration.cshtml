@model HRanagingCenterMVC.Models.TblUser
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}



<center style="background-color:bisque">
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />


    @using (Html.BeginForm("Registration", "Home", FormMethod.Post))
    {
        <table style="width: 433px; height: 370px; background-color: #0026ff; font-size: large; font-weight: bold;">
            <th colspan="2" align="center"><h1>Sign Up</h1></th>


            <tr>
                <td align="center">Person of Name</td>
                <td align="center">
                    @Html.TextBoxFor(m => m.personName)
                </td>
            </tr>

            <tr>
                <td style="height: 72px" align="center">Username</td>
                <td style="height: 72px" align="center">
                    @Html.TextBoxFor(m => m.userName)
                </td>
            </tr>

            <tr>
                <td style="height: 72px" align="center">Phone</td>
                <td style="height: 72px" align="center">
                    @Html.TextBoxFor(m => m.phone)
                </td>
            </tr>

            <tr>
                <td style="height: 72px" align="center">Confirm Password</td>
                <td style="height: 72px" align="center">
                    @Html.TextBoxFor(m => m.password)
                </td>
            </tr>

            <tr>
                <td style="height: 72px" align="center">Password</td>
                <td style="height: 72px" align="center">
                    @Html.TextBoxFor(m => m.password)
                </td>
            </tr>

            <tr>
                <td style="height: 72px" align="center">Postal Code</td>
                <td style="height: 72px" align="center">
                    @Html.TextBoxFor(m => m.postalCode)
                </td>
            </tr>

            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Submit" name="Submit" class="btn btnOrder" />

                </td>
            </tr>
        </table>
    }

    <br />


    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

</center>






